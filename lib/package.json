{
  "name": "handy-angular-components",
  "version": "0.0.0",
  "description": "Angular 2+ reusable components library",
  "author": "Joan Jan√©",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "gulp": "gulp",
    "start": "ng serve --app=hac",
    "prebuild": "concurrently -p \"[{name}]\" -n \"Sass,lint\" \"npm run build:styles\" \"npm run lint\"",
    "build": "ng build --app=hac",
    "build:styles": "gulp styles",
    "watch": "concurrently \"ng build --app=hac --watch\" \"npm run watch:styles\"",
    "watch:styles": "gulp watch",
    "test": "ng test",
    "lint": "ng lint",
    "build:demo": "ng build --app=demo -d=/demo",
    "watch:demo": "concurrently -p \"[{name}]\" -n \"Angular,Sass\" \"npm run build:demo -- --watch\" \"npm run watch:styles\"",
    "serve": "simplehttpserver ../dist"
  },
  "repository": {
    "type": "git",
    "url": "unknown"
  },
  "dependencies": {
    "@angular/animations": "^4.0.0",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "core-js": "^2.4.1",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "1.1.2",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/language-service": "^4.0.0",
    "@types/jasmine": "2.5.52",
    "@types/node": "~8.0.0",
    "codelyzer": "~3.0.1",
    "concurrently": "^3.4.0",
    "gulp": "^3.9.1",
    "gulp-sass": "^3.1.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "simplehttpserver": "0.0.6",
    "ts-node": "~3.0.4",
    "tslint": "~5.4.3",
    "typescript": "~2.3.3"
  }
}
