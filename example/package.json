{
  "name": "hac-demo",
  "version": "0.0.0",
  "description": "Demo of Handy Angular Components library",
  "author": "Joan Jan√©",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "gulp": "gulp",
    "start": "concurrently \"npm run serve\" \"npm run watch\" --names \"SERVER,CLIENT\" --prefix name",
    "ngc-aot": "rimraf ./demo/aot && ngc -p ./demo/tsconfig.demo-aot.json",
    "build:debug": "rimraf ./demo/dist && ng build --app=\"demo-jit\"",
    "postbuild:debug": "npm run assets",
    "prebuild:release": "npm run ngc-aot",
    "build:release": "ng build --aot --prod --app=\"demo-aot\"",
    "postbuild:release": "npm run assets",
    "watch": "concurrently \"npm run build:debug -- --watch\" \"sleepms 10000 && npm run assets -- -w\" --names \"NGDEMO,ASSETS\" --prefix name",
    "test": "ng test --app=\"demo-jit\"",
    "lint": "ng lint",
    "serve": "simplehttpserver ./dist",
    "assets": "cpx \"../dist/assets/**\" \"./dist/assets/\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joanjane/handy-angular-components"
  },
  "dependencies": {
    "@angular/animations": "^4.0.0",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "core-js": "^2.4.1",
    "handy-angular-components": "file:../dist",
    "intl": "^1.2.5",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "1.1.2",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/language-service": "^4.0.0",
    "@types/jasmine": "2.5.52",
    "@types/node": "~8.0.0",
    "codelyzer": "~3.0.1",
    "concurrently": "^3.5.0",
    "cpx": "^1.5.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "rimraf": "^2.6.1",
    "simplehttpserver": "0.0.6",
    "sleep-ms": "^2.0.1",
    "ts-node": "~3.0.4",
    "tslint": "~5.4.3",
    "typescript": "~2.3.3"
  }
}
