{
  "name": "hac-demo",
  "version": "0.0.0",
  "description": "Demo of Handy Angular Components library",
  "author": "Joan Jan√©",
  "license": "MIT",
  "scripts": {
    "preinstall": "npm run link",
    "link": "npm link ../dist/handy-angular-components",
    "ng": "ng",
    "gulp": "gulp",
    "start": "concurrently \"npm run serve\" \"npm run watch\" --names \"HTTP,NG\" --prefix name",
    "ngc-aot": "ngc -p ./demo/tsconfig.demo-aot.json",
    "build:debug": "npm run clean && ng build demo-jit",
    "postbuild:debug": "npm run assets",
    "prebuild:release": "npm run lib && npm run clean && npm run ngc-aot",
    "build:release": "ng build --aot --prod demo-aot",
    "postbuild:release": "npm run assets",
    "watch": "concurrently \"npm run build:debug -- --watch --no-delete-output-path\" \"npm run assets -- -w\"  \"npm run lib:watch\" --names \"APP,ASSETS,LIB\" --prefix name",
    "test": "ng test demo-jit",
    "lint": "ng lint",
    "serve": "ws -d ./dist --spa index.html",
    "assets": "cpx \"../dist/handy-angular-components/assets/**\" \"./dist/assets/\"",
    "clean": "rimraf ./demo/aot && rimraf ./demo/dist",
    "cleaninstall": "rimraf ./package-lock.json && rimraf ./node_modules && npm install",
    "lib": "npm run build --prefix ../lib",
    "lib:watch": "npm run dev --prefix ../lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joanjane/handy-angular-components"
  },
  "dependencies": {
    "@angular/common": "^6.0.7",
    "@angular/compiler": "^6.0.7",
    "@angular/core": "^6.0.7",
    "@angular/forms": "^6.0.7",
    "@angular/platform-browser": "^6.0.7",
    "@angular/platform-browser-dynamic": "^6.0.7",
    "@angular/router": "^6.0.7",
    "core-js": "^2.5.7",
    "handy-angular-components": "file:../dist/handy-angular-components",
    "intl": "^1.2.5",
    "rxjs": "^6.2.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "6.0.8",
    "@angular/compiler-cli": "^6.0.7",
    "@angular/language-service": "^6.0.7",
    "@types/jasmine": "2.8.8",
    "@types/node": "^10.5.2",
    "codelyzer": "~4.4.2",
    "concurrently": "^3.6.0",
    "cpx": "^1.5.0",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "~2.0.4",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^1.2.0",
    "local-web-server": "^2.5.6",
    "protractor": "~5.3.2",
    "rimraf": "^2.6.2",
    "sleep-ms": "^2.0.1",
    "ts-node": "~7.0.0",
    "tslint": "~5.10.0",
    "typescript": "2.7.2"
  }
}
