{
  "name": "hac-demo",
  "version": "0.0.0",
  "description": "Demo of Handy Angular Components library",
  "author": "Joan Jan√©",
  "license": "MIT",
  "scripts": {
    "preinstall": "npm run link",
    "link": "npm link ../dist/handy-angular-components",
    "ng": "ng",
    "prestart": "npm run dev --prefix ../lib",
    "start": "concurrently \"ng serve demo-jit\" \"npm run lib:watch\" --names \"NG,LIB\" --prefix name",
    "build:debug": "ng build demo-jit",
    "ngc-aot": "ngc -p ./demo/tsconfig.demo-aot.json",
    "prebuild:release": "npm run lib:release && ng lint && npm run ngc-aot",
    "build:release": "ng build --prod demo-aot",
    "test": "ng test demo-jit",
    "lint": "ng lint",
    "serve": "ws -d ./dist --spa handy-angular-components/index.html",
    "cleaninstall": "rimraf ./package-lock.json && rimraf ./node_modules && npm install",
    "lib:release": "npm run build --prefix ../lib",
    "lib:watch": "npm run watch --prefix ../lib",
    "predeploy": "npm run build:release",
    "deploy": "node ghpages.js && gh-pages -d dist/handy-angular-components -b gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joanjane/handy-angular-components"
  },
  "dependencies": {
    "@angular/common": "^6.0.7",
    "@angular/compiler": "^6.0.7",
    "@angular/core": "^6.0.7",
    "@angular/forms": "^6.0.7",
    "@angular/platform-browser": "^6.0.7",
    "@angular/platform-browser-dynamic": "^6.0.7",
    "@angular/router": "^6.0.7",
    "core-js": "^2.5.7",
    "handy-angular-components": "file:../dist/handy-angular-components",
    "rxjs": "^6.2.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "6.0.8",
    "@angular/compiler-cli": "^6.0.7",
    "@angular/language-service": "^6.0.7",
    "@types/jasmine": "2.8.8",
    "@types/node": "^10.5.2",
    "codelyzer": "~4.4.2",
    "concurrently": "^3.6.0",
    "gh-pages": "^1.2.0",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "~2.0.4",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^1.2.0",
    "local-web-server": "^2.5.6",
    "protractor": "~5.3.2",
    "rimraf": "^2.6.2",
    "ts-node": "~7.0.0",
    "tslint": "~5.10.0",
    "typescript": "2.7.2"
  }
}
